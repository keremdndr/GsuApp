<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="281dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HoÅŸgeldiniz!"
            android:id="@+id/textView"
            android:layout_weight="0.22"
            android:singleLine="true"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YemekNormal"
        android:id="@+id/foodbutton"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/logout"
        android:layout_alignStart="@+id/logout" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YemekSwipe"
        android:id="@+id/yemekswipe"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="69dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/yemekswipe"
        android:layout_alignEnd="@+id/yemekswipe" />

    <include layout="@layout/footer"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/token"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/token2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:layout_below="@+id/token"
        android:layout_toEndOf="@+id/logout" />


</RelativeLayout>