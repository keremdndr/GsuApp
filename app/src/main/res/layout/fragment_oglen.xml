<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOglen"
   >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/gunonceki"
            android:background="@android:color/transparent"
            android:textSize="50dp"
            android:gravity="left"
            android:layout_alignBottom="@+id/oglentatli"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/gunsonraki"
            android:background="@android:color/transparent"
            android:fontFamily="Orni"
            android:gravity="right"
            android:textSize="50dp"
            android:layout_alignBottom="@+id/oglentatli"
            android:layout_alignParentEnd="true" />



       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglentatli"
            android:layout_gravity="center_horizontal"
            android:hint="@string/a"
            android:text="New Text"
            android:layout_below="@+id/oglenek"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglenek"
            android:layout_gravity="center_horizontal"
            android:hint="@string/b"
            android:text="New Text"
            android:layout_below="@+id/oglenana"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglenana"
            android:layout_gravity="center_horizontal"
            android:hint="@string/c"
            android:text="New Text"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/oglencorba"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglencorba"
            android:layout_gravity="center_horizontal|top"
            android:hint="@string/d"
            android:text="New Text"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/oglencorba"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/view" />
        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/oglenana"
            android:layout_alignStart="@+id/view"
            android:layout_marginTop="15dp" />
        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/oglenek"
            android:layout_centerHorizontal="true"
            android:id="@+id/view2"
            android:layout_marginTop="15dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galatasaray Ãœniversitesi"
        android:id="@+id/baslikuni"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30dp"
        android:gravity="top|center_vertical|center_horizontal"
        android:layout_marginTop="50dp" />

</FrameLayout>
