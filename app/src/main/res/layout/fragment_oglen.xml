<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOglen">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onceki Gun"
            android:id="@+id/gunonceki"
            android:layout_below="@+id/oglentatli"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonraki Gun"
            android:id="@+id/gunsonraki"
            android:layout_below="@+id/oglentatli"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglentatli"
            android:layout_gravity="center_horizontal"
            android:hint="@string/a"
            android:text="New Text"
            android:layout_below="@+id/oglenek"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglenek"
            android:layout_gravity="center_horizontal"
            android:hint="@string/b"
            android:text="New Text"
            android:layout_below="@+id/oglenana"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglenana"
            android:layout_gravity="center_horizontal"
            android:hint="@string/c"
            android:text="New Text"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/oglencorba"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oglencorba"
            android:layout_gravity="center_horizontal|top"
            android:hint="@string/d"
            android:text="New Text"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
